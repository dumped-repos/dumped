p = user.name
p
  = html.img(src: user.avatar_url)

.repos__list
  - user.repos.each do |repo|
    .repo-item
      .repos-item__name = repo.name
      .repos-item__description = repo.description
      .repos-item__language = repo.language
      .repos-item__mark-as-abandoned = repo_update_abandoned_status_link(repo)

